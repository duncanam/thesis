FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    	inlet
    	{
    	    type            fixedValue;
    	    value           uniform 0;
    	}
    	top
    	{
    	    type            fixedValue;
    	    value           uniform 0;
    	}
	bottom
	{
	    type            fixedValue;
	    value           uniform 0;
	}
	outlet
	{
	    type            zeroGradient;
	}
	frontAndBack
	{
	    type            fixedValue;
		value			uniform 0;
	}
}


