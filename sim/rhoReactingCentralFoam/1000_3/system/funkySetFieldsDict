FoamFile
{
    version		2.0;
    format      ascii;
    class           dictionary;
	location		"system";
    object          funkySetFieldsDict;
}

expressions
(
	TGradLHS
	{
		field		T;
		expression	"-60000 * pos().x + 900"; // vary T from 900K to 300K over:
		condition	"pos().x<=0.01"; //				0.01m from x=0m to x=0.01m
		keepPatches true; // keep BCs that were set before (?)
	}	

	pGradLHS
	{
		field		p;
		expression	"-2.0265e7 * pos().x + 303975"; // vary p from 3 atm to 1 atm over:
		condition	"pos().x<=0.01"; //						0.01m from x=0m to x=0.01m
		keepPatches	true; // keep BCs that were set before (?)
	}
);
